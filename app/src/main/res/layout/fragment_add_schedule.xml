<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            tools:context="com.teamtrack.fragments.LoginFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="Create a schedule"
            android:textColor="#FFFFFF"
            android:textSize="16sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <RelativeLayout
                android:id="@+id/relative_customer_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_customer_name"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_centerInParent="true"
                    android:layout_toLeftOf="@+id/iv_customer"
                    android:layout_toStartOf="@+id/iv_customer"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="Customer Name"
                    android:maxLines="1"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"/>

                <ImageView
                    android:id="@+id/iv_customer"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:alpha="0.5"
                    android:src="@drawable/ic_right_chevron"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/primaryLightColor"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative_customer_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/tv_customer_location"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_centerInParent="true"
                    android:layout_toLeftOf="@+id/iv_customer_location"
                    android:layout_toStartOf="@+id/iv_customer_location"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="Customer Location"
                    android:maxLines="1"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"/>

                <ImageView
                    android:id="@+id/iv_customer_location"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:alpha="0.5"
                    android:src="@drawable/ic_right_chevron"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/primaryLightColor"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative_sales_person"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/tv_sales_person"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_centerInParent="true"
                    android:layout_toLeftOf="@+id/iv_sales_person"
                    android:layout_toStartOf="@+id/iv_sales_person"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="Sales Person"
                    android:maxLines="1"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"/>

                <ImageView
                    android:id="@+id/iv_sales_person"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:alpha="0.5"
                    android:src="@drawable/ic_right_chevron"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/primaryLightColor"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Date"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_meeting_date"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_below="@+id/tv_date"
                    android:layout_marginTop="4dp"
                    android:alpha="0.5"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="DD MMM YYYY"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/primaryLightColor"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/relative_from_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_from_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="From Time"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/tv_meeting_from_time"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_below="@+id/tv_from_time"
                        android:layout_marginTop="4dp"
                        android:alpha="0.5"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:text="HH:MM AM"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/primaryLightColor"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relative_to_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_to_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="To Time"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/tv_meeting_to_time"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_below="@+id/tv_to_time"
                        android:layout_marginTop="4dp"
                        android:alpha="0.5"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:text="HH:MM AM"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/primaryLightColor"/>
                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/relative_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Status"
                    android:textSize="12sp"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_status"
                    android:layout_marginTop="8dp">

                    <Spinner
                        android:id="@+id/spinner_status"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/curved_border_grey"
                        android:drawSelectorOnTop="true"
                        android:entries="@array/status_array"
                        android:gravity="center_vertical"
                        tools:listitem="@android:layout/simple_spinner_item"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="end|center_vertical"
                        android:layout_margin="3dp"
                        android:alpha="0.5"
                        android:src="@drawable/spinner_down"
                        android:tint="@color/secondary_text"/>


                </FrameLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Description"
                    android:textSize="12sp"/>

                <EditText
                    android:id="@+id/et_description"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_below="@+id/tv_description"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/curved_border_grey"
                    android:gravity="start"
                    android:maxLength="120"
                    android:imeOptions="actionNext"
                    android:padding="8dp"
                    android:textSize="14sp"
                    tools:text="TV Installation"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative_status_from"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_status_from"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Status Updated From"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/et_status_from"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_below="@+id/tv_status_from"
                    android:layout_marginTop="4dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    tools:text="Hopes college, Coimbatore"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/primaryLightColor"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative_status_on"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_status_on"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Status Updated On"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/et_status_on"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_below="@+id/tv_status_on"
                    android:layout_marginTop="4dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    tools:text="25 May 2018 04:30PM"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/primaryLightColor"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative_meeting_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_meeting_update"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Meeting Updates"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/et_meeting_update"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_meeting_update"
                    android:layout_marginTop="4dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    tools:text="Met the client, updated the status. Needs re-visit"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/primaryLightColor"/>
            </RelativeLayout>


            <Button
                android:id="@+id/btn_create_schedule"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="24dp"
                android:background="@color/colorPrimaryDark"
                android:text="Create"
                android:textColor="#FFFFFF"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>